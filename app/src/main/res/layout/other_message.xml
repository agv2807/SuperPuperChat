<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="14dp"
    android:paddingStart="14dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="40dp"
    android:background="@drawable/round_message_dark"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/other_message_user_name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Вася Пупкин"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/other_message_text"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:text="Очень длинное сообщение чтобы узнать как будет смотреться"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/other_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:52"
                    android:layout_gravity="bottom"
                    android:textColor="#8E8C8C"
                    android:textSize="12sp" />

        </LinearLayout>

</LinearLayout>